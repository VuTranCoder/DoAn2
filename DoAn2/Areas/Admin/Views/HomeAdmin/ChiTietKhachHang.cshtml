@model DoAn2.Model.KHACH_HANG

@{
    ViewBag.Title = "Chi Tiết Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Chi Tiết Khách Hàng</h2>

<div>
    <h4>Khách Hàng</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Mã Khách Hàng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.MA_KH)
        </dd>
        <dt>
            Tên Khách Hàng
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TEN_KH)
        </dd>
        <dt>
           Số Điện Thoại
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SDT)
        </dd>
        <dt>
           Địa Chỉ
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DIACHI)
        </dd>
        <dt>
           Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EMAIL)
        </dd>
    </dl>
</div>
<div>
    <a href="@Url.Action("DanhMucKhachHang", "HomeAdmin")" class="btn btn-default">Quay lại</a>
</div>
