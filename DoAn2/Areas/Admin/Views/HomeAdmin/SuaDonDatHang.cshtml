@model DoAn2.Model.DON_DAT_HANG

@{
    ViewBag.Title = "Sửa Đơn Đặt Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Sửa Đơn Đặt Hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Đơn Đặt Hàng</h4>
        <hr />
        @Html.HiddenFor(model => model.MA_DH)

        <div class="form-group">
            @Html.LabelFor(model => model.TRANGTHAI_DH, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TRANGTHAI_DH, new SelectList(new[] { "Chưa hoàn thành", "Hoàn thành", "Đã hủy" }), "Chọn trạng thái")
                @Html.ValidationMessageFor(model => model.TRANGTHAI_DH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở lại danh sách", "DonDatHang")
</div>
